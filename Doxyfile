EXTRACT_PACKAGE        = YES
# HIDE_UNDOC_MEMBERS: НЕ скрывать недокументированные члены
HIDE_UNDOC_MEMBERS     = NO
# SHOW_NAMESPACES: Явно включать документацию пространств имен
